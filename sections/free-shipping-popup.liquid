{%- if section.settings.show_popup -%}
  <aside class="free-shpping-popup">
    <button class="shipping-popup-close">{% render 'icon' with 'close' %}</button>

    {%- if section.settings.title != blank -%}
    <h2 class="NewsletterPopup__Heading Heading u-h2">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.content != blank -%}
    <div class="NewsletterPopup__Content">
      {{ section.settings.content }}
    </div>
    {% if section.settings.btn_url and section.settings.btn_text %}
    <a href="{{ section.settings.btn_url }}" class="ShopTheLook__ViewButton Button Button--primary">{{ section.settings.btn_text }}</a>
    {% endif %}
    {%- endif -%}
  </aside>
{%- endif -%}
<script>
  $(document).ready(function(){
    var shippingEstimator = (function(){
      var config = {
        'popup' 	: $('.free-shpping-popup'),
        'closebtn'	: '.shipping-popup-close',
        'addtocart'	: $('.ProductForm__AddToCart'),
        'popupcontent': $('.free-shpping-popup .NewsletterPopup__Content')
      };

      function closePopup(){
        config.popup.removeClass('active');
        window.localStorage.setItem('free_shipping_popup', 'true');
      }

      function checkShippingPopup(){
        setTimeout(openFreeShipping, 2000);
      }

      function openFreeShipping(){
        let popup = localStorage.getItem('free_shipping_popup');
        console.log(popup);

        if(localStorage.getItem('free_shipping_popup'))
          return;

        jQuery.getJSON('/cart.js', function(cart) {
          if(cart.items.length == 1 && (30000 - cart.items[0].final_line_price) > 0) {
            updateRemainingPrice(30000 - cart.items[0].final_line_price);
            config.popup.addClass('active');	
          }
          {% comment %}
//           if(cart.total_price > ({{section.settings.start_price}} * 100 ) && cart.total_price < ({{section.settings.end_price}} * 100)) {
//             updateRemainingPrice(({{section.settings.end_price}} *100 )-cart.total_price);
//             config.popup.addClass('active');
//           }
          {% endcomment %}
        });
      }
      
      function updateRemainingPrice(price){
      	let content = config.popupcontent.html();
        content = content.replace("--amount--", Shopify.formatMoney(price));
        config.popupcontent.html(content);
      }

      function init(){
        config.popup.on('click',config.closebtn,closePopup);
        config.addtocart.on('click',checkShippingPopup);

        openFreeShipping();
      }

      return {
        init: init
      };

    })();
    shippingEstimator.init();
  });
</script>	

{% schema %}
{
  "name": "Free Shipping Popup",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_popup",
      "label": "Enable",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shipping Message"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>You're --amount-- away from getting FREE SHIPPING - Don't miss your chance!!</p>",
	  "info": "Here --amount-- will be replace by the dynamic price. Please do not change the format."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Shop more"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL"
    }
	]
}
{% endschema %}