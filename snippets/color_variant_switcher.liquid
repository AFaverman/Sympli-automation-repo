<!-- Show/hide thumbnails and slider images based on selected color swatch -->
<script type="text/javascript">
  // Grabbing product thumbnails
  var thumbnails = jQuery('.Product__SlideshowNav .Product__SlideshowNavScroller .Product__SlideshowNavImage img');
  var sliderImages = jQuery('.Product__Slideshow .Product__SlideItem.Product__SlideItem--image img');
  var sliderDots = jQuery('.Product__SlideshowMobileNav .dot');
  var thumbnailDots = jQuery('.Product__SlideshowNavScroller .Product__SlideshowNavDot');
  var optionSelect = '.ColorSwatch__Radio';
  
  jQuery(document).ready(function() {
    var optionValue = $('.ColorSwatchList .ColorSwatch__Radio:checked').val();
    console.log(optionValue);
    productVariantImages(optionValue);

    $('form[action="/cart/add"]').on('click', optionSelect, function() {
      var optionValue = $(this).val();
      productVariantImages(optionValue);
    });
  });
  
  function productVariantImages(optionValue) {
    if (optionValue == undefined) {
      return 
    }
    
    sliderDots.each(function() {
		var wrapper = $(this);
		if ( wrapper.data('alt-mobile') === optionValue ) {
          wrapper.removeClass('hide-slider-dot');
        } else {
          wrapper.addClass('hide-slider-dot');
        }
    });
    
    
    thumbnailDots.each(function() {
		var wrapper = $(this);
		if ( wrapper.data('alt') === optionValue ) {
          wrapper.removeClass('hide-thumbnail-dot');
        } else {
          wrapper.addClass('hide-thumbnail-dot');
        }
    });

    thumbnails.each(function() {
      var wrapper = $(this);

      if ( jQuery(this).attr('alt') === optionValue ) {
        wrapper.parents('.Product__SlideshowNavImage').show()
      }
      else {
        var href = wrapper.parents('.Product__SlideshowNavImage')[0].getAttribute('href');
        if ($(href).hasClass('Product__SlideItem--video')) {
          wrapper.parents('.Product__SlideshowNavImage').show()
        } else {
          wrapper.parents('.Product__SlideshowNavImage').hide()
        }
      }
    });

    sliderImages.each(function() {
      var wrapper = $(this);
      if ( jQuery(this).attr('alt') === optionValue ) {
        wrapper.parents('.Product__SlideItem.Product__SlideItem--image').removeClass('hide-product-slider-image');
      }
      else {
        wrapper.parents('.Product__SlideItem.Product__SlideItem--image').addClass('hide-product-slider-image');
      }
    });
  }
</script>